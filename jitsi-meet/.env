# Configuración de Jitsi Meet con Docker
# Generado automáticamente - Modifica según tus necesidades

# ==================================
# CONFIGURACIÓN BÁSICA
# ==================================

# Directorio de configuración (relativo al docker-compose.yml)
CONFIG=./.jitsi-meet-cfg

# Zona horaria
TZ=America/Argentina/Buenos_Aires

# URL pública de acceso a Jitsi (IMPORTANTE: cambiar en producción)
# Para desarrollo local NO incluir http:// cuando DISABLE_HTTPS=1
# Para producción usa tu dominio: https://tudominio.com  
PUBLIC_URL=localhost:8000

# Política de reinicio de contenedores
RESTART_POLICY=unless-stopped

# ==================================
# PUERTOS DE RED
# ==================================

# Puerto HTTP (web interface)
HTTP_PORT=8000

# Puerto HTTPS (dejar deshabilitado para desarrollo local)
HTTPS_PORT=8443

# Puerto UDP para el video bridge (no cambiar sin razón)
JVB_PORT=10000

# Puerto TCP para el video bridge
JVB_TCP_MAPPED_PORT=4443

# ==================================
# AUTENTICACIÓN Y SEGURIDAD
# ==================================

# Deshabilitar autenticación (cualquiera puede crear salas)
ENABLE_AUTH=0

# Permitir invitados sin autenticar
ENABLE_GUESTS=1

# Deshabilitar HTTPS (para desarrollo local)
DISABLE_HTTPS=1

# Forzar HTTP como protocolo
ENABLE_HTTP_REDIRECT=0

# Deshabilitar Let's Encrypt (para desarrollo local)
ENABLE_LETSENCRYPT=0

# Tipo de autenticación (internal, jwt, ldap)
AUTH_TYPE=internal

# ==================================
# CONTRASEÑAS DE COMPONENTES INTERNOS
# ==================================
# IMPORTANTE: Genera contraseñas seguras para producción
# Puedes usar: openssl rand -hex 16

JICOFO_COMPONENT_SECRET=s8sjikDF83jdkJD92jdkJSL
JICOFO_AUTH_PASSWORD=JKD83jdkslDF83jdkJD92jdkJSL

JVB_AUTH_PASSWORD=df83JKlkjsDF83jdkJD92jdkJSL

JIGASI_XMPP_PASSWORD=83JKDklsDF83jdkJD92jdkJSL

JIBRI_RECORDER_PASSWORD=DFkl83JKlsDF83jdkJD92jdkJSL
JIBRI_XMPP_PASSWORD=83JKlsDF83jdkJD92jdkJSL

# ==================================
# CARACTERÍSTICAS OPCIONALES
# ==================================

# Habilitar grabación de reuniones (requiere Jibri - comentado por defecto)
ENABLE_RECORDING=0

# Habilitar transcripciones
ENABLE_TRANSCRIPTIONS=0

# Habilitar lobby (sala de espera)
ENABLE_LOBBY=0

# Habilitar WebSocket para XMPP
ENABLE_XMPP_WEBSOCKET=1

# Habilitar WebSocket para Colibri
ENABLE_COLIBRI_WEBSOCKET=1

# Deshabilitar Etherpad (no necesario)
ETHERPAD_URL_BASE=

# ==================================
# CONFIGURACIÓN AVANZADA
# ==================================

# Dirección IP del host Docker (automático en la mayoría de casos)
# DOCKER_HOST_ADDRESS=192.168.1.100

# Máximo de participantes por bridge
# MAX_BRIDGE_PARTICIPANTS=

# Timeout para salas vacías (en segundos)
# JICOFO_CONF_INITIAL_PARTICIPANT_WAIT_TIMEOUT=15
# JICOFO_CONF_SINGLE_PARTICIPANT_TIMEOUT=0

# ==================================
# LETSENCRYPT (Solo para producción con dominio)
# ==================================

# LETSENCRYPT_DOMAIN=jitsi.tudominio.com
# LETSENCRYPT_EMAIL=admin@tudominio.com

# ==================================
# CODECS DE VIDEO
# ==================================

ENABLE_CODEC_VP8=1
ENABLE_CODEC_VP9=1
ENABLE_CODEC_H264=1

# ==================================
# OTRAS CONFIGURACIONES
# ==================================

# Deshabilitar el harvester TCP de JVB (mejor rendimiento en algunos casos)
# JVB_TCP_HARVESTER_DISABLED=true

# Habilitar el auto-login
ENABLE_AUTO_LOGIN=1

# Habilitar auto-dueño (el primero en entrar es moderador)
ENABLE_AUTO_OWNER=1

# Configuración de Prosody para permitir conexiones HTTP (sin TLS)
GLOBAL_MODULES=
GLOBAL_CONFIG=c2s_require_encryption = false;

# ==================================
# NOTAS IMPORTANTES
# ==================================
# 
# 1. Para desarrollo local: usa HTTP en puerto 8000
#    PUBLIC_URL=http://localhost:8000
#
# 2. Para producción: configura un dominio y HTTPS
#    PUBLIC_URL=https://tudominio.com
#    ENABLE_LETSENCRYPT=1
#    LETSENCRYPT_DOMAIN=tudominio.com
#    LETSENCRYPT_EMAIL=tu@email.com
#
# 3. Cambia las contraseñas antes de usar en producción
#
# 4. Asegúrate de que los puertos 8000 y 10000/UDP estén abiertos
#
